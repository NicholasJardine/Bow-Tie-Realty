        <div class="carousel-inner"style="width: 750px;" style="position: relative; margin:0 auto;">
          <div class="carousel-item active" style="position: relative; margin:0 auto;">
            <div class="carousel-img-container d-flex justify-content-center" style="border:solid 4px;">
    <%= cl_image_tag @listing.photo.key, height: 500, width: 1000, crop: :scale, class: "d-block w-100 lala" %>
            </div>

          </div>
              <% @pictures.each do |picture| %>
