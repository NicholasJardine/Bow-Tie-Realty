
<% if user_signed_in? %>

  <% if @user.email == "arlenelapan@gmail.com" %>
      <%= link_to edit_listing_path do %>
    <h3 style=" color:black;">Edit listing </h3>
    <% end %>
    <%= link_to listing_path(@listing), data: { confirm: "Are you sure?" }, method: :delete do%>
    <h3 style=" color:black;">Delete listing </h3>
